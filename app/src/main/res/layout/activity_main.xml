<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/expression"
        android:textAlignment="textEnd"
        android:textColor="@color/teal_700"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:textColor="@color/red"
        android:backgroundTint="@color/white"
        android:text="C"
        android:textSize="40dp"
        android:onClick="clearNumber"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_clear"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="0"
        android:textSize="40dp"
        android:onClick="numClick"/>

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_0"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:text="="
        android:textSize="40dp"
        android:onClick="equalClick"/>

    <Button
        android:id="@+id/op_min"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/white"
        android:text="-"
        android:textSize="50dp"
        android:onClick="oprClick"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="1"
        android:textSize="40dp"
        android:onClick="numClick"/>
    <Button
        android:id="@+id/btn_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_toRightOf="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="2"
        android:textSize="40dp"
        android:onClick="numClick"/>
    <Button
        android:id="@+id/btn_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_toRightOf="@id/btn_2"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="3"
        android:textSize="40dp"
        android:onClick="numClick"/>

    <Button
        android:id="@+id/op_plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/white"
        android:text="+"
        android:textSize="50dp"
        android:onClick="oprClick"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="4"
        android:textSize="40dp"
        android:onClick="numClick"/>
    <Button
        android:id="@+id/btn_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_2"
        android:layout_toRightOf="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="5"
        android:textSize="40dp"
        android:onClick="numClick"/>
    <Button
        android:id="@+id/btn_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_3"
        android:layout_toRightOf="@id/btn_2"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="6"
        android:textSize="40dp"
        android:onClick="numClick"/>

    <Button
        android:id="@+id/op_multiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/op_plus"
        android:layout_marginTop="5dp"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/white"
        android:text="ร"
        android:textSize="50dp"
        android:onClick="oprClick"/>


    <Button
        android:id="@+id/op_hapus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/op_divide"
        android:layout_marginTop="5dp"
        android:background="?attr/selectableItemBackground"
        android:drawableTop="@drawable/panah"
        android:onClick="onBackspaceClick"
        />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_4"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="7"
        android:textSize="40dp"
        android:onClick="numClick"/>
    <Button
        android:id="@+id/btn_8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_5"
        android:layout_toRightOf="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="8"
        android:textSize="40dp"
        android:onClick="numClick"/>
    <Button
        android:id="@+id/btn_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_6"
        android:layout_toRightOf="@id/btn_2"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="9"
        android:textSize="40dp"
        android:onClick="numClick"/>

    <Button
        android:id="@+id/op_divide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/op_multiply"
        android:layout_marginTop="5dp"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/white"
        android:text="รท"
        android:textSize="50dp"
        android:onClick="oprClick"/>
</RelativeLayout>